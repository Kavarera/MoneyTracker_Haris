<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MoneyTracker.WinUI.View.DashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyTracker.WinUI.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:customCtrl="using:MoneyTracker.WinUI.Components"
    xmlns:utils="using:MoneyTracker.WinUI.Utils" xmlns:dto="using:MoneyTracker.Application.DTO"
    mc:Ignorable="d"
    Title="Dashboard">

    <Grid>
        <Grid.Resources>
            <utils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </Grid.Resources>
        <SplitView x:Name="splitView" PaneBackground="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
           IsPaneOpen="{x:Bind _viewModel.IsSplitPaneOpen, Mode=OneWay}" OpenPaneLength="256" CompactPaneLength="56" DisplayMode="CompactInline">
            <SplitView.Pane >
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <customCtrl:HandButton Name="SplitPaneToggleButton" Grid.Row="0" Margin="5,20,0,0" Click="{x:Bind _viewModel.ToggleSplitPane}"
                            >
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE71D;"/>
                    </customCtrl:HandButton>
                    <customCtrl:HandButton Grid.Row="1" Content="Change Connection" x:Name="ChangeConnectionButton" Margin="20, 20"
                            HorizontalAlignment="Stretch"
                            BorderBrush="Red" BorderThickness="2" CornerRadius="8"
                            Visibility="{Binding IsSplitPaneOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!--Atur style button-->
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DarkRed" />
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />

                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent" />
                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Black" />
                        </Button.Resources>
                    </customCtrl:HandButton>

                    <Grid Grid.Row="2" x:Name="GridAccounts" Loaded="{x:Bind _viewModel.LoadAsync}"
                          Visibility="{Binding IsSplitPaneOpen, Converter={StaticResource BoolToVisibilityConverter}}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!--Account List-->
                        <TextBlock Grid.Row="0" Text="Accounts" Margin="10,5" FontWeight="SemiBold" FontSize="18"/>
                        <ProgressRing Grid.Row="1" IsActive="True" Width="32" Height="32" HorizontalAlignment="Center"
                                      Margin="0,16,0,0"
                                      Visibility="{Binding IsLoadingData, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <ListView Grid.Row="1" ItemsSource="{x:Bind _viewModel.Accounts}"
                                  Visibility="{Binding IsNotLoadingData, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:AccountDTO">
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>


                    </Grid>
                </Grid>
            </SplitView.Pane>

        </SplitView>
    </Grid>
</Window>
