<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MoneyTracker.WinUI.View.ConnectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyTracker.WinUI.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ConnectionWindow">

    <ScrollView x:Name="RootScrollViewer" DataContext="{x:Bind viewModel, Mode=OneWay}">
        <StackPanel x:Name="InnerContent" Spacing="15" MaxWidth="800" HorizontalAlignment="Center" Margin="10" Padding="60">
            <TextBlock Text="Connection Settings For PostgreSQL" 
       Style="{StaticResource TitleTextBlockStyle}" 
       Margin="0,0,0,10"/>

            <TextBox x:Name="HostInput"
     Header="Host / Server"
     PlaceholderText="e.g. localhost atau 127.0.0.1"
     Text="{x:Bind viewModel.Host ,Mode=TwoWay}"/>

            <TextBox x:Name="PortInput"
       Header="Port"
       PlaceholderText="Default: 5432"
                 Text="{x:Bind viewModel.Port,Mode=TwoWay}"
       />

            <TextBox x:Name="DbNameInput"
     Header="Database Name"
                 Text="{x:Bind viewModel.Database,Mode=TwoWay}"
     PlaceholderText="Masukkan nama database"/>

            <TextBox x:Name="UsernameInput"
     Header="Username"
                 Text="{x:Bind viewModel.Username,Mode=TwoWay}"
     PlaceholderText="e.g. postgres"/>

            <PasswordBox x:Name="PasswordInput"
         Header="Password"
         PlaceholderText="Masukkan password"
         PasswordChar="â—"
             PasswordChanged="PasswordInput_PasswordChanged"/>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button x:Name="TestConnectionButton" 
        Content="Test Connection" 
        Click="TestConnectionButton_Click"
        Style="{StaticResource AccentButtonStyle}"/>

                <Button x:Name="SaveButton" 
        Content="Continue" 
        Click="SaveButton_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusMessage" Text="{x:Bind viewModel.StatusMessage ,Mode=OneWay}" Foreground="Red" Margin="0,5,0,0"/>
        </StackPanel>
    </ScrollView>
</Window>
